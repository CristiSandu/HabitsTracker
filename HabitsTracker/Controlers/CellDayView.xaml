<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitsTracker.Controlers.CellDayView"
             x:Name="cellDay"
             xmlns:vm="clr-namespace:HabitsTracker.Controlers"
             x:DataType="vm:CellDayView"
             >
    <Grid BackgroundColor="Transparent">
        <Image Source="{Binding ImageName, Source={x:Reference cellDay}}"
                BackgroundColor="Transparent"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="28"
                WidthRequest="28" />

        <Label VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand"
                FontAttributes="Bold"
                TextColor="{StaticResource MainBrown}"
                Padding="0"
                Text="{Binding Text, Source={x:Reference cellDay}}"
                FontSize="15" />

        <Button Command="{Binding Command, Source={x:Reference cellDay}}"
                CommandParameter="{Binding CommandParameter, Source={x:Reference cellDay}}"
                BackgroundColor="Transparent" HeightRequest="30" />
    </Grid>
</ContentView>

